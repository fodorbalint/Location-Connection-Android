<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
	<ImageView
        android:layout_width="match_parent"
        android:layout_height="0px"
        app:layout_constraintDimensionRatio="1:1"
        android:id="@+id/UploadedImage" /><!-- if the height was set to wrap_content, there would be extra space horizontally between the pictures-->	
	<ImageButton
		android:src="@drawable/ic_delete_small"
		android:layout_width="24dp"
		android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:tooltipText="@string/DeleteImage"
        android:background="?attr/selectableItemBackgroundBorderless"
		android:id="@+id/DeleteUploadedImage"/>
</androidx.constraintlayout.widget.ConstraintLayout>
