<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@android:color/white"
    android:id="@+id/MainLayout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/LogoImage"
        app:layout_constraintBottom_toBottomOf="@+id/LogoImage"
        app:layout_constraintRight_toLeftOf="@+id/LogoImage"
        android:layout_marginRight="10dp"
        android:text="@string/app_name"
        android:textSize="25dp"
        android:textColor="#000000"
        android:id="@+id/LogoText" />
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/logo70_4x"
        android:id="@+id/LogoImage" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/LogoImage"
        app:layout_constraintBottom_toTopOf="@+id/RegisterButton"
        android:id="@+id/LoginSection">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/LoginEmail"
            app:layout_constraintBottom_toBottomOf="@+id/LoginEmail"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/LoginEmail"
            android:theme="@style/BlackTextSmallNormal"
            android:id="@+id/LoginEmailText" />
        <EditText
            android:layout_width="0px"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/LoginEmailText"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:theme="@style/EditNormal"
            android:id="@+id/LoginEmail" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/LoginPassword"
            app:layout_constraintBottom_toBottomOf="@+id/LoginPassword"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/LoginPassword"
            android:theme="@style/BlackTextSmallNormal"
            android:id="@+id/LoginPasswordText" />
        <EditText
            android:layout_width="0px"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/LoginEmail"
            app:layout_constraintLeft_toRightOf="@+id/LoginEmailText"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:imeOptions="actionGo"
            android:theme="@style/EditNormal"
            android:id="@+id/LoginPassword" />
        <Button
            android:layout_width="0px"
            android:layout_height="45dp"
            app:layout_constraintTop_toBottomOf="@+id/LoginPassword"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ResetPassword"
            app:layout_constraintHorizontal_weight="1"
            android:textAllCaps="false"
            android:backgroundTint="@color/LoginButton"
            android:theme="@style/ButtonNormal"
            android:text="@string/LoginDone"
            android:id="@+id/LoginDone" />
        <Button
            android:layout_width="0px"
            android:layout_height="45dp"
            app:layout_constraintTop_toBottomOf="@+id/LoginPassword"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/LoginDone"
            app:layout_constraintBottom_toTopOf="@+id/ResetEmail"
            app:layout_constraintHorizontal_weight="1"
            android:singleLine="true"
            android:textAllCaps="false"
            android:backgroundTint="@color/ForgotButton"
            android:theme="@style/ButtonNormal"
            android:text="@string/ResetPassword"
            android:id="@+id/ResetPassword" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/ResetEmail"
            app:layout_constraintBottom_toBottomOf="@+id/ResetEmail"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ResetEmail"
            android:visibility="gone"
            android:text="@string/ResetEmail"
            android:theme="@style/BlackTextSmallNormal"
            android:id="@+id/ResetEmailText" />
        <EditText
            android:layout_width="0px"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/ResetPassword"
            app:layout_constraintBottom_toTopOf="@+id/ResetSendButton"
            app:layout_constraintLeft_toRightOf="@+id/ResetEmailText"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:imeOptions="actionGo"
            android:theme="@style/EditNormal"                        
            android:id="@+id/ResetEmail" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:layout_constraintTop_toBottomOf="@+id/ResetEmail"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:textAllCaps="false"
            android:backgroundTint="@color/ForgotButton"
            android:theme="@style/ButtonNormal"
            android:text="@string/ResetSend"
            android:id="@+id/ResetSendButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@+id/LoginSection"
        app:layout_constraintBottom_toTopOf="@+id/ListButton"
        android:textAllCaps="false"
        android:backgroundTint="@color/RegisterButton"
        android:theme="@style/ButtonNormal"
        android:text="@string/RegisterButton"
        android:id="@+id/RegisterButton" />
    <Button        
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@+id/RegisterButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAllCaps="false"
        android:backgroundTint="@color/ListButton"
        android:theme="@style/ButtonNormal"
        android:text="@string/ListButton"		
        android:id="@+id/ListButton" />	
</androidx.constraintlayout.widget.ConstraintLayout>