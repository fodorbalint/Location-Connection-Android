<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:androidx="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ContentBackground"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:animateLayoutChanges="true"
    android:id="@+id/MainLayout">
	<androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/ToolbarMenuDarkNormal"
        android:padding="0px"
		android:contentInsetLeft="0px"
        android:contentInsetStart="0px"
		app:contentInsetLeft="0px"
        app:contentInsetStart="0px"
        android:id="@+id/MainPageToolbar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0px">
            <ImageButton
                android:layout_width="47dp"
        		android:layout_height="47dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:visibility="gone"
				android:scaleType="centerCrop"
                android:background="@null"
                android:id="@+id/StatusImage" />
            <TextView
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/MapView"
                app:layout_constraintBottom_toBottomOf="@+id/MapView"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:singleLine="true"
                android:theme="@style/BlackTextSmallNormal"
    			android:id="@+id/StatusText" />
            <ImageButton
    			android:src="@drawable/ic_filters_normal"
                android:layout_width="48dp"
        		android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/OpenSearch"                
                android:layout_marginLeft="5dp"
    			android:tooltipText="@string/OpenFilters"
                android:background="@null"
                android:id="@+id/OpenFilters" />
            <ImageButton
    			android:src="@drawable/ic_search_normal"
                android:layout_width="48dp"
        		android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/ListView" 
    			android:tooltipText="@string/OpenSearch"
                android:background="@null"
                android:id="@+id/OpenSearch" />
			<ImageButton
                android:src="@drawable/ic_listall_normal"
                android:layout_width="48dp"
        		android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/MapView" 
    			android:tooltipText="@string/ListView"
                android:background="@null"
                android:id="@+id/ListView" />
			<ImageButton
                android:src="@drawable/ic_map_normal"
                android:layout_width="48dp"
        		android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent" 
                android:layout_marginRight="8dp"
    			android:tooltipText="@string/MapView"
                android:background="@null"
                android:id="@+id/MapView" />
		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.appcompat.widget.Toolbar>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/MainPageToolbar"
		android:orientation="horizontal"
        android:visibility="gone"
		android:padding="10dp"
		android:background="@android:color/white"
		android:clickable="false"
		android:id="@+id/SearchLayout">
		<EditText
			android:layout_width="0px"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:minWidth="100dp"
			android:imeOptions="actionGo"
            android:singleLine="true"
            android:maxLength="255"
            android:hint="@string/Search"
            android:theme="@style/EditNormal"
			android:id="@+id/SearchTerm" />
		<Spinner
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:spinnerMode="dialog"
            android:theme="@style/EditNormal"
			android:id="@+id/SearchIn" />
        <!--<ImageButton
			android:src="@drawable/ic_search_black_normal"
            android:layout_width="36dp"
    		android:layout_height="36dp"
            scaleX="-1"
            android:layout_gravity="center_vertical"
			android:tooltipText="@string/SearchOK"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/SearchOK" />-->
	</LinearLayout>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/SearchLayout"
        android:visibility="gone"
		android:background="@android:color/white"         
		android:clickable="true"
		android:id="@+id/FilterLayout">
        <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/ListType"
            android:theme="@style/BlackTextSmallNormal"
            android:id="@+id/ListTypeCaption" />
        <Spinner
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/SortBy_LastActiveDate"
            app:layout_constraintBottom_toBottomOf="@+id/SortBy_LastActiveDate"
            app:layout_constraintLeft_toLeftOf="@+id/ListTypeCaption"
            android:spinnerMode="dialog"
			android:id="@+id/ListType" />
        <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/ListType"
            android:layout_marginTop="10dp"
            android:text="@string/SortBy"
            android:theme="@style/BlackTextSmallNormal"
            android:id="@+id/SortByCaption" />
        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:layout_constraintTop_toBottomOf="@+id/SortByCaption"
            app:layout_constraintBottom_toTopOf="@+id/FilterSpacer"
            app:layout_constraintLeft_toRightOf="@+id/ListType"
            android:layout_marginTop="2dp"
            android:tooltipText="@string/LastActiveDate"
            android:src="@drawable/ic_lightning_28_normal"
            android:background="@null"
            android:id="@+id/SortBy_LastActiveDate" />
        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:layout_constraintTop_toBottomOf="@+id/SortByCaption"
            app:layout_constraintLeft_toRightOf="@+id/SortBy_LastActiveDate"
            android:layout_marginTop="2dp"
            android:tooltipText="@string/ResponseRate"
            android:src="@drawable/ic_chat_two_28_normal"
            android:background="@null"
            android:id="@+id/SortBy_ResponseRate" />
        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:layout_constraintTop_toBottomOf="@+id/SortByCaption"
            app:layout_constraintLeft_toRightOf="@+id/SortBy_ResponseRate"
            android:layout_marginTop="2dp"
            android:tooltipText="@string/RegisterDate"
            android:src="@drawable/ic_registered_28_normal"
            android:background="@null" 
            android:id="@+id/SortBy_RegisterDate" />
        <ImageButton
            android:layout_width="35dp"
    		android:layout_height="35dp"            
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/SortBy_RegisterDate"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="20dp"    
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/OrderBy" />
        <ImageButton
            android:src="@drawable/ic_collapse_normal"
            android:layout_width="35dp"
    		android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:scaleY="-1"
            android:tooltipText="@string/DistanceFiltersOpen"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/DistanceFiltersOpenClose" />
        <View
            android:layout_width="match_parent"
    		android:layout_height="8dp"
            app:layout_constraintTop_toBottomOf="@+id/SortBy_LastActiveDate"
            app:layout_constraintBottom_toTopOf="@+id/DistanceFilters"
            android:id="@+id/FilterSpacer" /><!-- setting MarginBottom on SortBy_LastActiveDate and MarginTop on DistanceFilters will not leave any padding when DistanceFilters is gone on Android 8. Android 9 OK -->
            
		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/FilterSpacer"
            android:paddingBottom="10dp"
            android:id="@+id/DistanceFilters">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/separator_top_transparent" />
			<RadioGroup
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/UseGeoContainer"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
				android:orientation="vertical"
                android:id="@+id/GeoRadioGroup">
				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
                    android:theme="@style/RadioNormal"
                    android:text="@string/UseGeoNo"
                    android:id="@+id/UseGeoNo" />
				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
                    android:theme="@style/RadioNormal"
					android:text="@string/UseGeoYes"
                    android:id="@+id/UseGeoYes" />
			</RadioGroup>
            <!-- When a png is set to src, it does not display correctly -->
            <ImageButton
                android:src="@null"
                android:layout_width="36dp"
        		android:layout_height="36dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
    			android:tooltipText="@string/RefreshDistance"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/RefreshDistance" />
            <ImageView
                android:src="@drawable/ic_reload36_black_4x"
                android:layout_width="36dp"
        		android:layout_height="36dp"
                app:layout_constraintTop_toTopOf="@+id/RefreshDistance"
                app:layout_constraintBottom_toBottomOf="@+id/RefreshDistance"
                app:layout_constraintLeft_toLeftOf="@+id/RefreshDistance"
                app:layout_constraintRight_toRightOf="@+id/RefreshDistance"
                android:id="@+id/RefreshDistanceImage" />            
			<androidx.constraintlayout.widget.ConstraintLayout
    			android:layout_width="match_parent"
    			android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/GeoRadioGroup"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="4dp"                
				android:id="@+id/UseGeoContainer">
				<RadioGroup
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="10dp"
					android:orientation="horizontal"
                    android:id="@+id/SourceRadioGroup">
					<RadioButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:theme="@style/RadioNormal"
						android:text="@string/DistanceSourceCurrent"
                        android:id="@+id/DistanceSourceCurrent" />
					<RadioButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
                        android:theme="@style/RadioNormal"
						android:text="@string/DistanceSourceAddress"
                        android:id="@+id/DistanceSourceAddress" />
				</RadioGroup>
                <EditText
					android:layout_width="0px"
					android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/AddressOK"
                    app:layout_constraintBottom_toBottomOf="@+id/AddressOK"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/AddressOK"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:maxLength="255"
                    android:theme="@style/EditNormal"
					android:id="@+id/DistanceSourceAddressText" />
                <ImageButton
					android:layout_width="36dp"
					android:layout_height="36dp"
                    app:layout_constraintTop_toBottomOf="@+id/SourceRadioGroup"
                    app:layout_constraintLeft_toRightOf="@+id/DistanceSourceAddressText"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_check_normal"
                    android:background="@drawable/icon_background_dark_ripple_normal"
                    android:tooltipText="@string/AddressOK"
					android:id="@+id/AddressOK" />
                <SeekBar
					android:layout_width="0px"
					android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/DistanceLimitInput"
                    app:layout_constraintBottom_toBottomOf="@+id/DistanceLimitInput"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/DistanceLimitInput"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
					android:id="@+id/DistanceLimit" />
                <EditText
					android:layout_width="60dp"
					android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/AddressOK"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/DistanceLimit"
                    app:layout_constraintRight_toLeftOf="@+id/DistanceUnitText"
                    android:layout_marginTop="5dp"                    
					android:inputType="number"
					android:imeOptions="actionGo"
					android:maxLength="5"
                    android:theme="@style/EditNormal"
					android:id="@+id/DistanceLimitInput"/>
                <TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/DistanceLimitInput"
                    app:layout_constraintBottom_toBottomOf="@+id/DistanceLimitInput"
                    app:layout_constraintLeft_toRightOf="@+id/DistanceLimitInput"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="5dp"  
                    android:layout_marginRight="10dp"
                    android:text="@string/DistanceUnit"
                    android:theme="@style/BlackTextSmallNormal"
                    android:id="@+id/DistanceUnitText" />
            </androidx.constraintlayout.widget.ConstraintLayout>            
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>       
	<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/FilterLayout"
        android:text="@string/NoResult"
        android:theme="@style/BlackTextSmallNormal"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:id="@+id/NoResult" />
	<GridView
        android:layout_width="match_parent"
        android:layout_height="0px"            
        app:layout_constraintTop_toBottomOf="@+id/FilterLayout"
        app:layout_constraintBottom_toTopOf="@+id/StatusBar"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:id="@+id/UserSearchList" />    
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0px"
        app:layout_constraintTop_toBottomOf="@+id/FilterLayout"
        app:layout_constraintBottom_toTopOf="@+id/StatusBar"
		android:id="@+id/MapContainer">
		<fragment
			android:id="@+id/ListViewMap"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			class="com.google.android.gms.maps.SupportMapFragment" />
	</LinearLayout>
    <Button
        android:layout_width="80dp"
    	android:layout_height="26dp"
        app:layout_constraintTop_toTopOf="@+id/MapContainer"
        app:layout_constraintRight_toLeftOf="@+id/MapSatellite"
		android:layout_marginTop="12dp"
        android:padding="0px"
		android:elevation="18dp"
        android:visibility="gone"
        android:textAllCaps="false"
        android:theme="@style/ButtonNormal"
        android:text="@string/MapStreet"
        android:id="@+id/MapStreet" />
    <Button
        android:layout_width="80dp"
    	android:layout_height="26dp"
        app:layout_constraintTop_toTopOf="@+id/MapContainer"
        app:layout_constraintRight_toRightOf="@+id/MapContainer"
		android:layout_marginTop="12dp"
        android:layout_marginRight="62dp"
		android:padding="0px"
		android:elevation="18dp"
        android:visibility="gone"
        android:textAllCaps="false"
        android:theme="@style/ButtonNormal"
        android:text="@string/MapSatellite"
        android:id="@+id/MapSatellite" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/FilterLayout"
        android:background="@drawable/separator_top_transparent" />
         
    <View
        android:layout_width="0px"
        android:layout_height="2dp"
        app:layout_constraintBottom_toTopOf="@+id/StatusBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="62dp"
        android:background="@drawable/separator_bottom_transparent"
        android:id="@+id/BottomSeparator" />
    <View
		android:layout_width="64dp"
		android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="@+id/StatusBar"
        app:layout_constraintBottom_toTopOf="@+id/StatusBar"
        app:layout_constraintRight_toRightOf="parent"        
        android:layout_marginRight="0px"
        android:translationX="2dp"
        android:background="@drawable/status_round_background64_black_4x"
        android:id="@+id/MenuChatListBg" />
    <View
		android:layout_width="2dp"
		android:layout_height="2dp"
        app:layout_constraintLeft_toRightOf="@+id/BottomSeparator"
        app:layout_constraintBottom_toTopOf="@+id/StatusBar"
        android:background="@drawable/status_round_background_corner"
        android:id="@+id/MenuChatListBgCorner" />                
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
		android:layout_height="29dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/ContentDarkBackground"
        android:id="@+id/StatusBar">
        <ImageView
            android:layout_width="29dp"
    		android:layout_height="29dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/ic_reload29_black_4x"
            android:visibility="gone"
            android:id="@+id/LoaderCircle" />
        <ImageButton
            android:layout_width="35dp"
    		android:layout_height="29dp"
            app:layout_constraintRight_toLeftOf="@+id/ResultSet"
            android:visibility="gone"
    		android:src="@drawable/ic_previous_list_normal"
    		android:tooltipText="@string/LoadPrevious"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/LoadPrevious" />        
        <TextView
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:theme="@style/BlackTextSmallNormal"
            android:visibility="gone"
    		android:id="@+id/ResultSet" />
        <ImageButton
            android:layout_width="35dp"
    		android:layout_height="29dp"
            app:layout_constraintLeft_toRightOf="@+id/ResultSet"
            android:visibility="gone"
    		android:src="@drawable/ic_previous_list_normal"
            android:scaleX="-1"
    		android:tooltipText="@string/LoadNext"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/LoadNext" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="30dp"		
		android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@+id/MenuChatList"
        app:layout_constraintBottom_toBottomOf="@+id/MenuChatList"
        app:layout_constraintLeft_toLeftOf="@+id/MenuChatList"
        app:layout_constraintRight_toRightOf="@+id/MenuChatList"
        android:alpha="0"
        android:id="@+id/RippleMain"
        android:background="@drawable/ripple_main" />
    <ImageButton
		android:layout_width="60dp"
		android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@+id/StatusBar"
        app:layout_constraintBottom_toTopOf="@+id/StatusBar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="0px"
        android:src="@drawable/ic_puzzle_normal"
        android:background="@null"        
        android:tooltipText="@string/MenuChatList"
        android:id="@+id/MenuChatList" />
    
    <ImageView
		android:layout_width="50dp"
		android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
		android:src="@drawable/ic_reload_pulldown50_4x" 		
        android:alpha="0"
        android:id="@+id/ReloadPulldown" />
</androidx.constraintlayout.widget.ConstraintLayout>